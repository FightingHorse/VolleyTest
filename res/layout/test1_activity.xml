<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <Button
        android:id="@+id/btn_stringRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="48dp"
        android:text="StringRequest"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_stringRequest_Post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_stringRequest"
        android:layout_below="@id/btn_stringRequest"
        android:layout_marginTop="43dp"
        android:text="StringRequest_Post"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_jsonRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/btn_stringRequest_Post"
        android:layout_below="@id/btn_stringRequest_Post"
        android:layout_marginTop="46dp"
        android:text="JsonObjectRequest"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_jsonArray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/btn_jsonRequest"
        android:layout_below="@id/btn_jsonRequest"
        android:layout_marginTop="64dp"
        android:text="JsonArray"
        android:textAllCaps="false" />

</RelativeLayout>